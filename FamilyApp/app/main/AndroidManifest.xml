<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shajitha.familyapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FamilyApp">
        <activity
            android:name=".viewCalendar"
            android:exported="false" />
        <activity
            android:name=".ActivitiesFun"
            android:exported="false" />
        <activity
            android:name=".ContactUs"
            android:exported="false" />
        <activity
            android:name=".CheckList"
            android:exported="false" />
        <activity
            android:name=".PhotoGallery"
            android:exported="false" />
        <activity
            android:name=".AddEvents"
            android:exported="false" />
        <activity
            android:name=".ToDoList"
            android:exported="false" />
        <activity
            android:name=".FamAppContacts"
            android:exported="false" />
        <activity
            android:name=".FamAppTimer"
            android:exported="false" />
        <activity
            android:name=".MealPlanner"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
